<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

<servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>LoginServlet</servlet-class>
		<init-param>
			<param-name>driver</param-name>
			<param-value>sun.jdbc.odbc.JdbcOdbcDriver</param-value>
		</init-param>	
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:odbc:test</param-value>
		</init-param>	
		<init-param>
			<param-name>user</param-name>
			<param-value>cis</param-value>
		</init-param>	
		<init-param>
			<param-name>pass</param-name>
			<param-value>cis</param-value>
		</init-param>
</servlet>

<servlet>
	<servlet-name>addquestion</servlet-name>
	<servlet-class>AddQuestionServlet</servlet-class>
		<init-param>
			<param-name>driver</param-name>
			<param-value>sun.jdbc.odbc.JdbcOdbcDriver</param-value>
		</init-param>	
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:odbc:test</param-value>
		</init-param>	
		<init-param>
			<param-name>user</param-name>
			<param-value>cis</param-value>
		</init-param>	
		<init-param>
			<param-name>pass</param-name>
			<param-value>cis</param-value>
		</init-param>
</servlet>

<servlet>
	<servlet-name>deletequestion</servlet-name>
	<servlet-class>DeleteQuestionServlet</servlet-class>
		<init-param>
			<param-name>driver</param-name>
			<param-value>sun.jdbc.odbc.JdbcOdbcDriver</param-value>
		</init-param>	
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:odbc:test</param-value>
		</init-param>	
		<init-param>
			<param-name>user</param-name>
			<param-value>cis</param-value>
		</init-param>	
		<init-param>
			<param-name>pass</param-name>
			<param-value>cis</param-value>
		</init-param>
</servlet>

<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>addquestion</servlet-name>
	<url-pattern>/addquestion</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>deletequestion</servlet-name>
	<url-pattern>/deletequestion</url-pattern>
</servlet-mapping>

<welcome-file-list>
<welcome-file>/index.jsp</welcome-file>
</welcome-file-list>
</web-app>